@model ContatoModel

@{
	ViewData["Title"] = "Confirmação apagar o contato contato";
}

<div class="text-center">

	<h3>Realmente desaja apagar o contato (@Model.Nome)?</h3>

</div>

<a class="btn btn-primary btn-block" role="button" asp-controller="Contato" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger btn-block" role="button" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar exclusão</a>
